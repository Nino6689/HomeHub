# WordPress Core (can be reinstalled)
public_html/wp-admin/
public_html/wp-includes/
public_html/wp-*.php
public_html/xmlrpc.php
public_html/license.txt
public_html/readme.html
public_html/index.php

# WordPress Content - Exclude default/unnecessary
public_html/wp-content/languages/
public_html/wp-content/upgrade/
public_html/wp-content/upgrade-temp-backup/
public_html/wp-content/cache/
public_html/wp-content/litespeed/

# Plugins - Exclude all except Oxygen (your paid plugin)
public_html/wp-content/plugins/*
!public_html/wp-content/plugins/oxygen/
!public_html/wp-content/plugins/oxygen-gutenberg/
!public_html/wp-content/plugins/oxygen-woocommerce/

# Themes - Exclude default, keep custom
public_html/wp-content/themes/twentytwenty*/

# Uploads - Large files, backup separately
public_html/wp-content/uploads/*
!public_html/wp-content/uploads/oxygen/
!public_html/wp-content/uploads/fonts/

# Config with sensitive data
public_html/wp-config.php

# Backup files
*.bk
*.backup
*.old

# OS files
.DS_Store
Thumbs.db
*.swp
*~

# IDE
.idea/
*.sublime-*

# Logs
*.log
debug.log

# Node (if using build tools)
node_modules/
package-lock.json

# Environment
.env
.env.*

# Temporary
*.tmp
*.temp
